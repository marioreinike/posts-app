{
  "name": "nomad-platform",
  "version": "1.0.0",
  "description": "Web Platform for Nomad",
  "main": "index.js",
  "author": "Nomad",
  "license": "UNLICENSED",
  "dependencies": {
    "@faker-js/faker": "^7.6.0",
    "@koa/cors": "^4.0.0",
    "@koa/router": "^12.0.0",
    "factory-girl": "^5.0.4",
    "koa": "^2.14.2",
    "koa-bodyparser": "^4.4.0",
    "koa-ejs": "^4.3.0",
    "koa-logger": "^3.2.1",
    "koa2-formidable": "^1.0.3",
    "pg": "^8.10.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.31.1",
    "sequelize-cli": "^6.6.0",
    "sequelize-typescript": "^2.1.5"
  },
  "scripts": {
    "start": "node build/index.js",
    "postinstall": "yarn build",
    "build": "tsc",
    "dev": "nodemon index.ts",
    "test": "jest --runInBand",
    "lint": "eslint src/ index.ts",
    "lint-fix": "eslint --fix ./src index.ts",
    "db:migrate": "npx sequelize db:migrate",
    "db:migrate:undo": "npx sequelize db:migrate:undo",
    "db:reset": "npx sequelize db:drop && npx sequelize db:create && npx sequelize db:migrate",
    "db:seed": "sequelize db:seed:all",
    "db:seed:undo": "sequelize db:seed:undo",
    "db:reset:seed": "sequelize db:drop && sequelize db:create && sequelize db:migrate && sequelize db:seed:all"
  },
  "devDependencies": {
    "@types/jest": "^28.1.7",
    "@types/koa": "^2.13.6",
    "@types/koa-bodyparser": "^4.3.10",
    "@types/koa-logger": "^3.1.2",
    "@types/koa__router": "^12.0.0",
    "@types/node": "^20.1.0",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.2",
    "eslint": "^8.40.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "jest": "^28.1.3",
    "jest-when": "^3.5.2",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.4"
  }
}
